<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.edwinacubillos.toypinchao.LoginActivity">

    <EditText
        android:id="@+id/eCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_correo"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/eContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_contrasena"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="iniciarSesionClicked"
        android:text="@string/bIniciarSesion" />

    <Button
        android:id="@+id/bCrearCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="crearCuentaClicked"
        android:text="@string/bCrearCuenta" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp" />

</LinearLayout>